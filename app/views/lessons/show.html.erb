<% content_for(:title, @lesson.name) %>

<h1>Lesson: <%= @lesson.name %></h1>

<li><%= @lesson.text %></li>

<h5><%= link_to 'Home', root_path %></h5>


<% if @lesson.number && @lesson.next %>
<h5><%= link_to "Next Lesson", section_lesson_path(@lesson.next) %></h5>
<% end %>

<% if @lesson.number && @lesson.prev %>
<h5><%= link_to "Previous Lesson", section_lesson_path(@lesson.prev) %></h5>
<% end %>
